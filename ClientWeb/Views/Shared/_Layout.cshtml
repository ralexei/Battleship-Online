<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/lib/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/js/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/signalr/hubs"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link href="/css/App.css" type="text/css" rel="stylesheet" />
    <link href="/css/Battlefield.css" type="text/css" rel="stylesheet" />
    <link href="/css/Lobby.css" type="text/css" rel="stylesheet" />
</head>
<body ng-app="ngGame" class="ng-scope">
    <div ng-controller="UserController">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Battleship", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Leaderboard", "Leaderboard", "Home")</li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a><b>User: </b>{{name}}</a></li>
                            <li><a><b>Poits: </b>{{elo}}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div id="nameModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Set your name:</h4>
                        </div>
                        <div class="modal-body">
                            <span>Name:</span><input ng-model="name" id="input-box" /><br />
                        </div>
                        <div class="modal-footer">
                            <input type="button" ng-click="setName()" id="enter-btn" class="btn btn-default" value="Ok" data-dismiss="modal" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div ng-controller="InitController"></div>
</body>
</html>